<h4>New Ticket</h4>
<div class="sub_box">
	<%= simple_form_for(@ticket, :url => ticket_create_path, :method => :post, :html => {:multipart => true, :class => "form-horizontal"}) do |f| %>
	<%= f.input :appraisal_id, :collection => @appraisals, :label => "Please select an appraisal", :label_method => lambda { |appraisal| "##{appraisal.id} - #{appraisal.title} (#{getStringForActivityValue(appraisal.status)})" }, :input_html => {:class => "input-xxlarge"} %>
	<%= f.input :title do |l| %>
		<%= text_field_tag "ticket[title]", nil, :class => "input-xxlarge" %>
	<% end %>
	<%= f.input :description do |l| %>
		<%= text_area_tag "ticket[description]", nil, :rows => 4, :class => "input-xxlarge" %>
	<% end %>
  <div class="form-actions">
  	<%= link_to 'Cancel', tickets_path, :class => "btn" %>
    <%= f.submit "Create ticket", :class => "btn btn-success"%>
  </div>
<% end %>
</div>
