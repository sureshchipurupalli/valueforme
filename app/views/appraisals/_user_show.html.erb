<div class="product">
  <div class="container">
    <div  class="row">
      <div class="col-md-3 col-sm-6 col-xs-12 text-left gt">
        <div class="pro-1">
          <p><span>Status :</span> <%= getStringForActivityValue(@appraisal.status) %></p>
          <p><span>Type :</span> <%= getStringForAppraisalType(@appraisal.selected_plan) %></p>
        </div>
      </div>
      <div class="col-md-9 col-sm-6 col-xs-12 text-right pt">
        <% if (@appraisal.status == EActivityValueFinalized) %>
            <div class="short">
              <%= link_to show_shared_path(@appraisal, :format => :pdf, :full => "no"), :class => "product-gre" do %><span class="glyphicon glyphicon-download-alt"></span> DOWNLOAD SHORT REPORT<% end %>
            </div>
        <% else %>
            <div class="col-md-1" style="padding-top: 15px;">
              <%= link_to 'Claim', claim_appraisal_path(@appraisal), :class => "btn btn-success pull-right claim" if @appraisal.status == EActivityValuePayed %>
              <%= link_to 'Edit', reply_appraisal_path(@appraisal), :class => "btn btn-success pull-right edit" if (@appraisal.status == EActivityValueClaimed) && (current_user == @appraisal.assigned_to) %>
            </div>
        <% end %>
      </div>
    </div>
    <div class="app-big-1">
      <h3><%= @appraisal.title %></h3>
      <div class="row">
        <div class="col-md-8">
          <% if @appraisal.status == EActivityValueFinalized%>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>FILE #</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.id %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>EFFECTIVE DATE OF REPORT</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.updated_at.strftime("%d %b. %Y") %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>APPRAISED BY</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= getProfileForUser(@appraisal.created_by) %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>CATEGORY</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= "#{@appraisal.classification.category.name}" unless @appraisal.classification.nil? %></br></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>TITLE</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.title %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>DESCRIPTION</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.name %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>APPROX. DATE OF MANUFACTURE</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.appraisal_info.year_of_manufacture %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>COUNTRY OF ORIGIN</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.appraisal_info.country_of_origin %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>SIGNATURES, MAKER/MAKER'S, DATES, ETC.</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.appraisal_info.makers_marks %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>INSCRIPTIONS</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.appraisal_info.inscriptions %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>DIMENSIONS</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.appraisal_info.dimensions %></span>
                  </div>
                </div>
              </div>

              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>CONDITION</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.appraisal_info.damage %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>ITEM HISTORY</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.appraisal_info.item_history %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>APPRAISER’S ADDITIONAL EXTRAORDINARY ASSUMPTIONS</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.appraisal_info.additional_ea %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>Appraiser’s Additional Comment</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= @appraisal.appraisal_info.appraiser_comments %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>REPLACEMENT VALUE (COMPARABLE)</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= print_replacement_cost(@appraisal) %></span>
                  </div>
                </div>
              </div>
              <div class="pro-bott auction">
                <div class="row">
                  <div class="col-md-3 col-sm-3 col-xs-12">
                    <span>FAIR MARKET VALUE</span>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <span><%= print_fair_market_value(@appraisal) %></span>
                  </div>
                </div>
              </div>

              <div class="auction-download">
                <div class="row">
                  <div class="col-md-6 col-sm-6">
                    <div class="long re">
                      <%= link_to show_shared_path(@appraisal, :format => :pdf, :full => "yes"), :class => "product-gre" do %><span class="glyphicon glyphicon-download-alt"></span> DOWNLOAD LONG REPORT<% end %>
                    </div>
                  </div>
                  <div class="col-md-6 col-sm-6">
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <% if @appraisal.insurance_claim %>
            <div class="auction-download">
              <div class="row">
                <div class="col-md-6 col-sm-6">
                  <div class="long re">
                    <span class='glyphicon glyphicon-ban-circle pull-right'></span>This appraisal is for an insurance claim for cashing out a property.
                  </div>
                </div>
                <div class="col-md-6 col-sm-6">
                </div>
              </div>
            </div>
        <% end %>

<div class="col-md-4">
  <div class="row">
    <%= render :partial => "photo_carousel" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= render  :partial => "photos/new_multiple_image_upload_form", locals: {photos: @photos} unless @appraisal.status == EActivityValueFinalized%>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <% if @appraisal.status == EActivityValueClaimed || @appraisal.status == EActivityValuePayed %>
      <%= link_to 'Save and Continue', @appraisal, :class => "btn btn-success pull-right" %>
    <% end %>
  </div>
</div>
<% if @appraisal.status == EActivityValueClaimed || @appraisal.status == EActivityValueFinalized %>
  <div class="row">
    <div class="col-md-12">
      <%= render :partial => "appraisals/comments", :locals => {:appraisal => @appraisal, :comments => @appraisal_comments}%>
    </div>
  </div>
<% end %>
<% if @appraisal.status == EActivityValueFinalized %>
  <div class="row">
    <div class="col-md-12">
      <% if @appraisal.status == EActivityValueFinalized %>
        <button type="button" class="btn btn-mini btn-success" data-toggle="collapse" data-target="#supplemental_information">
          <span class="glyphicon glyphicon-file"></span>
          More (important supplemental information)
        </button>
        <% selected_plan = @appraisal.selected_plan
        appraiser_type = @appraiser.appraiser_info.uspap.to_i

        if (selected_plan == EAAppraisalTypeShortRestricted || selected_plan == EAAppraisalTypeLongRestricted || selected_plan == EAAppraisalTypeShortRestrictedPair || selected_plan == EAAppraisalTypeLongRestrictedPair) && appraiser_type == EAAppraiserUSPAPFamiliar
          format = "appraisal_body_restricteduse_USPAP_compliant_yes"
          option = 1
        elsif (selected_plan == EAAppraisalTypeShortForSelling || selected_plan == EAAppraisalTypeLongForSelling || selected_plan == EAAppraisalTypeShortForSellingPair || selected_plan == EAAppraisalTypeLongForSellingPair) && appraiser_type == EAAppraiserUSPAPFamiliar
          format = "appraisal_body_summary_forselling_USPAP_compliant_yes"
          option =2
        elsif (selected_plan == EAAppraisalTypeShortRestricted || selected_plan == EAAppraisalTypeLongRestricted || selected_plan == EAAppraisalTypeShortRestrictedPair || selected_plan == EAAppraisalTypeLongRestrictedPair) && appraiser_type != EAAppraiserUSPAPFamiliar
          format = "appraisal_body_restricteduse_USPAP_compliant_no"
          option =3
        elsif (selected_plan == EAAppraisalTypeShortForSelling || selected_plan == EAAppraisalTypeLongForSelling || selected_plan == EAAppraisalTypeShortForSellingPair || selected_plan == EAAppraisalTypeLongForSellingPair) && appraiser_type != EAAppraiserUSPAPFamiliar
          format = "appraisal_body_summary_forselling_USPAP_compliant_no"
          option =4
        else
          raise "Invalid selected_plan and appraiser_type combination"
        end
      %>
    <div id="supplemental_information" class="collapse">
      <%= render :partial => "appraisals/formats/"+format, :locals => {:appraisal => @appraisal} %>
      <% if @appraisal.status == EActivityValueFinalized %>
        <div id="appraiser-info">
          <% if (@appraiser.signature?) %> 
            <%= image_tag "#{@appraiser.signature.standard.url}?id=#{rand(1000)}", :height => "100", :width => "250", class: "img-responsive"%>
          <% elsif !(@appraiser.appraiser_extra.signature_json.nil? || @appraiser.appraiser_extra.signature_json.empty?) %>
            <canvas id="appraiser-signature" height="100" width="250"></canvas>
          <% end %>
          <h4><%= @appraiser.name %></h4>
        </div>
      <% end %>
    </div>
      <% end %>
</div>
</div>
          <% end %>
</div>
</div>
  </div>