<h4>Customer/Appraiser Messaging</h4>
<div id="comment_list">
<% comments.each do |comment| %>
	<%= render :partial => "appraisals/comment_block.html.erb", :locals => {:comment => comment} %>
<% end %>
</div>
<% if @appraisal.status == EActivityValueClaimed || @appraisal.status == EActivityValueFinalized  %>
<div id="div_comment">
	<%= simple_form_for Comment.new, :action => "comment", :controller => "appraisals" do |f| %>
	<%= f.input :body, :label => "Please enter your message here:", :input_html => {:rows => 3}  %>
	<input type="hidden" name="comment_appraisal_id" id="comment_appraisal_id" value="<%= @appraisal.id %>">
	<button id="btnSaveComment" class="btn btn-success">Send</button>
	<% end %>
</div>
<div id="div_saving_comment" style="display:none;">
	We are saving your comment. Please wait...
</div>
<% end %>
