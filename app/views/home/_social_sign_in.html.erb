<div class="social_icon">
  <p>
    <%= link_to customer_omniauth_authorize_path(:facebook), class: "btn btn-info fb" do %>
        <i class="fa fab fa-facebook"> </i>
        <span>Sign In with Facebook</span>
    <% end %>
    <%= link_to customer_omniauth_authorize_path(:twitter), class: "btn btn-info twi" do %>
        <i class="fa ftw fa-twitter"> </i>
        <span>Sign In with Twitter</span>
    <% end %>

    <%= link_to customer_omniauth_authorize_path(:linkedin), class: "btn btn-info link" do %>
        <i class="fa fli fa-linkedin"> </i>
        <span>Sign In with Linkedin</span>
    <% end %>
  </p>
</div>