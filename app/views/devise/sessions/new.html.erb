<div class="container">
  <div class="login">
    <h2 style="text-align:left">Login</h2>
    <div class="my-login">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "login", :autocomplete => "off", :style => "margin-left: 30px"}) do |f| %>
          <div class="row">
            <div class="col-md-5">
              <div class="sidn">
                <div class="form-group">
                  <label class="control-label">Email<font color="#ff5a00">*</font></label>
                  <%= f.email_field :email, :class => "form-control", :autocomplete => "off" %>
                </div>
                <div class="form-group">
                  <label class="control-label">Password<font color="#ff5a00">*</font></label>
                  <%= f.password_field :password, :class => "form-control", :autocomplete => "off" %>
                </div>
                <div class="text-right">
                  <%= f.submit "Login", :class => "btn log-gre" %>
                </div>
              </div>
          </div>
          <div class="col-md-7">
            <div class="social">
              <%= link_to customer_omniauth_authorize_path(:facebook), class: "my-so my-face" do %>
                  <div class="fb-pad">
                    <span><i class="fa fa-facebook"> </i></span>
                  </div>Sign In with Facebook
              <% end %>
            </div>
            <div class="social">
              <%= link_to customer_omniauth_authorize_path(:twitter), class: "my-so my-twi" do %>
                  <div class="twi-pad">
                  <span><i class="fa ftw fa-twitter"> </i></span></div>Sign In with Twitter
              <% end %>
            </div>
            <div class="social">
              <%= link_to customer_omniauth_authorize_path(:linkedin), class: "my-so my-link" do %>
                  <div class="link-pad">
                    <span><i class="fa fli fa-linkedin"> </i></span></div>Sign In with Linkedin
              <% end %>
            </div>
          </div>
      <% end %>
      </div>
          <div class="login-nav">
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
